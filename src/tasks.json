{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build GUI (React)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/build-gui.sh",
      "windows": {
        "command": "${workspaceFolder}\\scripts\\build-gui.bat"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Dev Server (React)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Local:.*http://localhost"
        }
      }
    },
    {
      "label": "Clean Build Artifacts",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "dist", "resources/web"],
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue dist, resources\\web"
        ]
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Plugin (Full)",
      "dependsOn": ["Build GUI (React)"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B",
        "build",
        "-S",
        ".",
        "-DIPP_BUILD_VST3=ON"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Build VST3 (Release)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--config",
        "Release"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        "$gcc",
        "$msvc"
      ]
    },
    {
      "label": "CMake: Build VST3 (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--config",
        "Debug"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        "$gcc",
        "$msvc"
      ]
    },
    {
      "label": "Full Build: GUI + VST3 (Release)",
      "dependsOn": [
        "Build GUI (React)",
        "CMake: Configure",
        "CMake: Build VST3 (Release)"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Clean",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "build"],
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue build"
        ]
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Watch: Build GUI on Save",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build:watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+),(\\d+)\\):\\s+(warning|error)\\s+TS(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "built in"
        }
      }
    }
  ]
}
